package Service;



import Domain.Table;

import static util.ScannerUtil.nextInt;
import static util.ScannerUtil.nextLine;

public class TableService {
	
	// 테이블 현황
	public void tableStatus(int index) { // 몇번째 테이블인지
		// 뭐뭐 출력할지 생각해야함둥
		System.out.println(index + "번째 테이블입니다.");
		System.out.println(Table.getInstance().getTables().get(index).toString()); // Orders
	}
	
	// 테이블 주문 취소
	public void orderRemove(int index) { // 몇번째 테이블인지
		if(Table.getInstance().getTables().get(index) != null) {
			System.out.println(Table.getInstance().getTables().get(index).toString());
			int removeIndex = nextInt("삭제하려는 주문을 선택해주세요. >> ");
			Table.getInstance().getTables().get(index).get(removeIndex);
			// 오더까지는 불러왔고 여기서 삭제하려는 거 삭제...
		}
		else {
			System.out.println("현재 테이블은 사용중이지 않습니다.");
		}
	}
	
	// 테이블 결제(카드 or 현금 or 카드 + 현금 or 더치페이)
	public void tablePay(int index) { // 몇번째 테이블인지
		
	}
	
	
	// 테이블 이동
	public void tableMove(int startIndex, int endIndex) {
		if(Table.getInstance().getTables().get(endIndex) == null) {
			Table.getInstance().getTables().add(endIndex, Table.getInstance().getTables().get(startIndex));
			Table.getInstance().getTables().set(startIndex, null);
		}
		else {
			System.out.println("선택한 자리는 이미 사용중입니다.");
		}
	}
	
	// 테이블 전체 초기화
	public void tableInitAll() {
		for(int i = 0; i < 6; i++) {
			Table.getInstance().getTables().add(null);
		}
	}
	
	// 테이블 하나만 초기화
	public void tableInit(int index) { // 몇번째 테이블인지
		Table.getInstance().getTables().set(index, null);	
		System.out.println("성공적으로 초기화 되었습니다.");
	}
	
}
